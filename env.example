# Django Settings: paramètres du framework Django
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# MongoDB Atlas Settings: connexion à la base de données MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_DB_NAME=veh_tpi

# JWT Settings: configuration du JSON Web Token
# Note: JWT_SECRET_KEY et JWT_ALGORITHM ne sont pas utilisés - SECRET_KEY est utilisé pour signer les tokens JWT
JWT_EXPIRATION_DELTA=3600

# CORS Settings: domaines autorisés pour les requêtes cross-origin
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8081,http://localhost:19006,http://localhost:19000

# AI Generation Settings: configuration pour la génération d'images et musique via Hugging Face
HUGGINGFACE_API_TOKEN=your-huggingface-token

# Modèle Hugging Face utilisé pour la génération d'images (ex: stabilityai/stable-diffusion-xl-base-1.0)
HF_IMAGE_MODEL=stabilityai/stable-diffusion-xl-base-1.0

# Répertoire de stockage des assets générés
# Note: MEDIA_ROOT est défini directement dans settings.py, cette variable n'est pas utilisée
# MEDIA_ROOT=media